<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="mini-nav">
  <h1>Movies</h1>
  <div class="right-nav">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    <%= button_to "Delete", @list, method: :delete, class: "btn btn-danger" %>
  </div>
</div>

<div class="lists">
  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="card-trip">
        <img src="<%= movie.poster_url %>" />
        <div class="card-trip-infos">
          <div>
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
          </div>
          <h2 class="card-trip-pricing"><%= movie.rating %>/10</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
